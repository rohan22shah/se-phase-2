{
  "manifest_version": 2,

  "name": "CheapBuy Chrome Plugin",
  "description": "This extension gets you prices from all major e-commerce platforms.",
  "version": "1.0",

  "browser_action": {
    "default_icon":{
            "16":"icon.png",
            "48":"icon.png",
            "128":"icon.png"
        },
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' https://code.jquery.com/jquery-1.7.1.min.js; object-src 'self'"
}